<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StartActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/medium_monstrent"
        android:gravity="center"
        android:lines="1"
        android:text="Connect Wi-Fi"
        android:textColor="#263238"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/regular_monstrent"
        android:gravity="center"
        android:lines="2"
        android:text="Cast to TV is the most powerful casting app for mirroring and broadcasting your Android screen and audio in real-time speed"
        android:textColor="#7392A0"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/start_app_logo"
        app:layout_constraintBottom_toTopOf="@+id/continue_application_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/continue_application_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/start_app_continue_application_img"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/sa_share_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/start_app_share_app_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/medium_monstrent"
                android:gravity="center"
                android:text="Share App"
                android:textColor="#7392A0"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginTop="25dp"
            android:background="#7392A0" />

        <LinearLayout
            android:id="@+id/sa_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/start_app_rate_us_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/medium_monstrent"
                android:gravity="center"
                android:text="Rate Us"
                android:textColor="#7392A0"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginTop="25dp"
            android:background="#7392A0" />

        <LinearLayout
            android:id="@+id/sa_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/start_app_privacy_policy_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/medium_monstrent"
                android:gravity="center"
                android:text="Privacy"
                android:textColor="#7392A0"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>